;
;最后修改日期：2019.02.14
;综述
;注：
;1.重型补给箱的补给内容更改为stuff目录中的物品（item），每样100
;2.参照stuff目录的划分方式，合并、修正、创建了共计15个专用box（源自small_box），按照字母表升序排列引用
;3.显示的物品为战役中不会引起报错的，余下的注释掉了，有需要则自行修改
;4.使用{item "ammo fg mortar" 100}式的语法，而非{item "mortar" "fg" "ammo" 3 {max 30}{value 2}}式的，且拒绝不良的简化|省略语法
;5.保留原文件信息是便于获得对应版本的快照，用于对比分析
;6.屏蔽原则主要是不能正常使用且会引起报错的需要屏蔽，功能未知的、无图标的则不是关键
;
;当前原始数据版本：3.262.0
;
{game_entity
	(include "/properties/construction.inc")

	;{props "cornered" "small" "wood" "construction" "parts" "no_destroyed_stamp" "burning" "break_on_burn"}
	{props "cornered" "small" "steel" "construction" "no_destroyed_stamp"}		;容器属性，去掉了可被撞毁、可以燃烧、可以污损的属性，材质从木制修改为钢制

	{Extension "para_ammo.mdl"}		;外观，修改的话需要将对应名字的模型和该文件放在一起
	{props "inventory_box" "spread_items"}		;空箱时与前面的props放在一个标签中，拆开原因未知，猜测可能类似于尾标签
	{ObstacleID "stuff"}
	{extender "inventory"
		{box

			;{weight 5000}
			{weight 1000000}		;质量，物品可叠加的重量的上限，过小会导致沉的物品不能一起叠加多个

			;{size 8 6}
			;大容量，多大合适取决于屏幕分辨率，一般设置为能看到边框的最大值，需要自行调整
			;1920×1080，个人测试用分辨率
			;{size 42 24}		;极限显示格数，推荐仅作为测试用，遮挡右侧命令栏、下侧命令面板，不推荐日常使用
			;{size 38 20}		;正常显示格数，推荐作为日常使用
			;1280×720，游戏所支持的最小分辨率
			{size 20 12}

			{clear}

			;原content
			;{item "dynamite" 1}
			;{item "smoke" "grenade" 10}
			;{item "antitank" "mine" 10}
			;{item "antipersonnel" "mine" 20}
			;{item "sandbag_kit" 5}
			;{item "repair_kit"}

			;stuff目录下的所有item项
			{item "ap+apcr_box" 1}		;AP+APCR的ammo|shell部分，gun+shell_box在游戏支持的最小分辨率（1280×720）下的补充
			{item "bazooka+explosive+flame+grenade_box" 1}
			{item "bombing+reactive_box" 1}		;reactive的weapon部分无图标且激发方式未知，默认只显示ammo部分；bombing的太多项无图标，混放到etc_box中易混淆|出现意外，有2个dropper疑似是对应的weapon，但无图标且激发方式未知，故屏蔽了
			{item "consumable_weapon_box" 1}		;所有ammunition、content的合集，内容太多，以常见的最大分辨率（1920×1080）对应格数呈现
			{item "etc_box" 1}		;不足以分箱的item集合
			{item "favourite_box" 1}		;个人爱好的武器集合，推荐自行设置
			{item "gun+shell_box" 1}		;weapon部分无图标且激发方式未知，默认只显示除AP、APCR外的ammo|shell部分
			{item "head_box" 1}
			{item "hgun+ptr_box" 1}		;mgun_box游戏支持的最小分辨率（1280×720）下装不下，故分箱放置。与ptr_box合箱，一是节约空间，而是都可以有一定的反装甲能力
			{item "launch-able_weapon_box" 1}		;所有可发射weapon的合集，内容太多，以常见的最大分辨率（1920×1080）的最大支持格数呈现
			{item "mgun_box" 1}
			{item "non-weapon_box" 1}		;所有非·Weapon的合集，内容太多，以常见的最大分辨率（1920×1080）对应格数呈现
			{item "pistol+smg_box" 1}
			{item "rifle+sniper_box" 1}		;rifle_box+sniper_box
			;{item "testing_box" 1}		;不定期测试用，内容数量不定，以最大分辨率（1920×1080）对应格数呈现
		}
	}

	(include "/properties/resupply_generic.inc")
	("para_ammo")

	{Volume "body"
		{thickness 3}
		{Tags  "body" "fire"}
		{able {touch}}
	}
	{lodclass "decor_small"}
	{texmod "1"}
}
